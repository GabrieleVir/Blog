<div class="row">
  <div class="col-md-6">
    <h1>Informations sur l'article</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <p><strong>ID</strong>: <%= @article.id %></p>
    <p><strong>Titre</strong>: <%= @article.title %></p>
    <p><strong>Contenu</strong>: <%= @article.content %></p>
    <%= image_tag(@article.fun,height: '120', width: '120' ) %>

  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% @article.comments.each do |comment| %>
      <p><%= comment.author %></p>
      <p><%= comment.content %></p>
    <% end %>
  </div>
</div>

